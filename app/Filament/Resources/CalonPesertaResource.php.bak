<?php

namespace App\Filament\Resources;

use App\Filament\Resources\CalonPesertaResource\Pages;
use App\Filament\Resources\CalonPesertaResource\Schemas\FormSchema;
use App\Filament\Resources\CalonPesertaResource\Schemas\TableSchema;
use App\Models\PesertaCalon;
use Filament\Resources\Resource;
use Filament\Tables\Table;
use Filament\Forms\Form;

class CalonPesertaResource extends Resource
{
    protected static ?string $model = PesertaCalon::class;

    protected static ?string $navigationIcon = 'heroicon-o-users'; // Fix icon

    public static function form(Form $form): Form
    {
        return $form->schema(FormSchema::get()); // Modular form
    }

    public static function table(Table $table): Table
    {
        return $table->columns(TableSchema::get()); // Modular table
    }

    public static function getPages(): array
    {
        return [
            'index' => Pages\ListCalonPesertas::route('/'),
            'create' => Pages\CreateCalonPeserta::route('/create'),
            'edit' => Pages\EditCalonPeserta::route('/{record}/edit'),
        ];
    }
}