    public static function form(Schema $schema): Schema
    {
        return $schema
            ->components([
                TextInput::make('nama')
                    ->required(),
                TextInput::make('nim')
                    ->required(),
                TextInput::make('asal_universitas'),
                TextInput::make('jurusan'),
                TextInput::make('no_hp')
                    ->required(),
                TextInput::make('email')
                    ->label('Email address')
                    ->email()
                    ->required(),
                TextInput::make('github'),
                TextInput::make('linkedin'),
                DatePicker::make('tanggal_mulai'),
                DatePicker::make('tanggal_selesai'),
                TextInput::make('cv'),
                TextInput::make('surat_lamaran'),
                Select::make('spesialisasi_id')
                    ->relationship('spesialisasi', 'id'),
                TextInput::make('spesialisasi'),
                Select::make('status')
                    ->options(['pendaftar' => 'Pendaftar', 'diterima' => 'Diterima', 'ditolak' => 'Ditolak'])
                    ->default('pendaftar')
                    ->required(),
            ]);
    }

    public static function infolist(Schema $schema): Schema
